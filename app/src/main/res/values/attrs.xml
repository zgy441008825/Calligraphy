<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseCalligraphyView">
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:padding" />

        <attr name="gridLineWidth" format="dimension" />
        <attr name="gridSlashWidth" format="dimension" />
        <attr name="gridBgStyle" format="enum">
            <enum name="matts" value="0" />
            <enum name="mizi" value="1" />
        </attr>
        <attr name="gridColor" format="color" />
        <attr name="textFontType" format="enum">
            <enum name="kaiti" value="0" />
            <enum name="kaiti_1" value="1" />
            <enum name="mircorsoft_kaiti" value="2" />
            <enum name="ruiyunxingkai" value="3" />
            <enum name="xingkai" value="4" />
            <enum name="yuhongling_xingkai" value="5" />
        </attr>
        <attr name="enableGridBackground" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CalligraphyLayout">
        <attr name="gridHorSpace" format="dimension" />
        <attr name="gridVerSpace" format="dimension" />
        <attr name="layoutType">
            <enum name="NORMAL" value="0"/>
            <enum name="SINGLE_LINE" value="1"/>
            <enum name="VER_LEFT" value="2"/>
            <enum name="VER_RIGHT" value="3"/>
        </attr>
    </declare-styleable>
</resources>